<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" 
         version="4.0">

  <display-name>semproject1</display-name>

  <!-- Welcome files -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>

  <!-- Servlet declaration -->
  <servlet>
    <servlet-name>Userservlet</servlet-name>
    <servlet-class>com.example.Userservlet</servlet-class> <!-- Update this with your package and class name -->
  </servlet>

  <!-- Servlet mapping -->
  <servlet-mapping>
    <servlet-name>Userservlet</servlet-name>
    <url-pattern>/Userservlet</url-pattern> <!-- URL pattern for accessing the servlet -->
  </servlet-mapping>

</web-app>
